[user]
  name = Johannes Troeger
  email = johannes.troeger@gmail.com
[alias]
  lol = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[merge]
  tool = vimdiff
  log = true
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[push]
  default = matching
[core]
  editor=vim
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes

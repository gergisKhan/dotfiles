[user]
  name = Johannes Troeger
  email = johannes.troeger@gmail.com
[alias]
  lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[merge]
  tool = vimdiff
  log = true
[push]
  default = matching
[core]
  editor=vim
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
